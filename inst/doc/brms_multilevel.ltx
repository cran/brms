\begin{Sinput}
R> nlform2 <- bf(cum ~ ult * (1 - exp(-(dev / theta)^omega)),
R>               ult ~ 1 + (1|ID1|AY), omega ~ 1 + (1|ID1|AY),
R>               theta ~ 1 + (1|ID1|AY), nl = TRUE)
              
R> fit_loss2 <- update(fit_loss1, formula = nlform2,
R>                     control = list(adapt_delta = 0.90))
\end{Sinput}

